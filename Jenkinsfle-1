pipeline {
    agent any
    parameters {
        booleanParam(
        defaultValue: false,
         description: 'This is a boolean parameter',
          name: 'terraform_apply'
        )   
    }
    
    stages {
        stage('Example') {
            steps {
                script{
                    if (params.terrform_apply == true) {
                        def terraformApply = '-auto-approve'    
                    } else { 
                        def terraformApply = '123' 
                    }
                    sh "echo "
                }
            }
        }
    }
}